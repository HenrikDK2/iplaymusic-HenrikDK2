<%- include('../partials/head.ejs') %>
<script src="/assets/javascript/playlist.js" defer></script>
<title>Playlist</title>
<%- include('../partials/after-head.ejs') %>
<%- include('../partials/header.ejs') %>
<main>
    <section class="playlist">
        <h2 class="playlist__heading">Playlists</h2>
        <img src="/assets/images/sound-wave.svg" alt="" class="playlist__background">

        <ul class="playlist-list"></ul>
    </section>

    <section class="playlist-songs">
        <h3 class="playlist-songs__top-songs">Top 50</h3>
        <h3 class="playlist-songs__songs">Rock Ballads</h3>
        <ul class="playlist-songs-list"></ul>
        <button class="listen-btn">LISTEN ALL</button>
    </section>
</main>

<template id="track">
    <li class="playlist-songs-list__item">
        <a href="" class="playlist-songs-list__img-container">
            <img src="/assets/images/play.svg" alt="play icon" class="playlist-songs-list__img">
        </a>

        <div href="" class="playlist-songs-list__container">
            <h3 class="playlist-songs-list__heading">Placeholder title</h3>
            <p class="playlist-songs-list__artist">Sony kaleb</p>
        </div>

        <p class="playlist-songs-list__length">2:57</p>
    </li>
</template>

<template id="playlist">
    <li data-id="" data-name="" data-amount="" class="playlist-list__item">
        <div class="loader simple-circle"></div>
        <img src="" data-imgSrc="" alt="Playlist" class="playlist-list__img">
    </li>
</template>
<%- include('../partials/footer.ejs') %>
<%- include('../partials/after-body.ejs') %>